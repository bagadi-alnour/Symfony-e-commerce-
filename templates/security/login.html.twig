{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="row col-12 justify-content-center align-items-center">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h2 class="h3 text-center m-3">Please sign in</h2>
                <div class="form-group">
                    <label class="sr-only" for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus></div>
                    <div class="form-group">
                        <label class="sr-only" for="inputPassword">Password</label>
                        <input class="form-control" id="inputPassword" name="password" placeholder="Password" required type="password">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <button class=" mt-3 btn btn-outline-success" type="submit">
                                    Sign in
                                </button>
                            </form>
                        </div>
                    </div>
                {% endblock %}
            